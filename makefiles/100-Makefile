CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS=-Wall -Werror -Wextra -pedantic

/**
 * Donâ€™t forget to put a .PHONY rule, in order to avoid relinking.
 * Put every rules used inside the phony rule.
 * Add m.h inside the all rule
 */

.PHONY: all clean oclean fclean re

all: m.h $(OBJ)
	$(CC) $(SRC) -o $(NAME)

clean:
	$(RM) $(NAME) *~
oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
