CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS=-Wall -Werror -Wextra -pedantic

/**
 * Donâ€™t forget to put a .PHONY rule, in order to avoid relinking.
 * Put every rules used inside the phony rule.
 */

.PHONY: all clean oclean fclean re

all: $(OBJ)
	$(CC) $(CFLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: oclean all
